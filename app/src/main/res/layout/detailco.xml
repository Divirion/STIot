<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"

        >


        <Button
            android:id="@+id/bpBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonbpBackOnClick"
            android:text="Back"
            />



        <TextView
            android:id="@+id/tvOcName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OcName"
            android:textSize="30dp"

            android:textColor="@color/DarkBlueSt"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="350dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Please set"
            android:textColor="@color/LightBlueSt"
            android:layout_gravity="center"
            android:id="@+id/tvPlease"
            android:textSize="30dp"
            android:gravity="center_vertical" />

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/borderbluelightst"
            android:padding="3dp"
            android:layout_marginLeft="50dp" >

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start Date"
                    android:id="@+id/tvDate"
                    android:textColor="@color/LightBlueSt"
                    android:background="@drawable/roundwhite"
                    android:onClick="tvDateOnClick" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/borderbluelightst"
            android:padding="3dp"
            android:layout_marginLeft="50dp">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                >


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start Time"
                    android:id="@+id/tvPeriod"
                    android:layout_gravity="center"
                    android:onClick="buttonbpTimeClick"
                    android:background="@drawable/roundwhite"
                    android:textColor="@color/LightBlueSt"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/borderbluelightst"
            android:padding="3dp"
            android:layout_marginLeft="30dp">

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Get Datas"
                    android:id="@+id/bnSetDate"
                    android:background="@drawable/roundwhite"
                    android:textColor="@color/LightBlueSt"
                    android:onClick="buttonGetDataOnClick"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMeasures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />







</LinearLayout>